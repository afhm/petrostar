---
import IndustryCard from './IndustryCard.astro';

const industries = [
  {
    image: '/src/images/industries/water.png',
    title: 'Power & Water',
    description:
      'Supporting sustainable power generation and water treatment facilities with reliable equipment and innovative solutions for improved efficiency and environmental compliance.',
  },
  {
    image: '/src/images/industries/Cement & Construction.jpg',
    title: 'Cement & Construction',
    description:
      'Providing essential equipment and materials for cement manufacturing and construction projects, ensuring quality and durability in infrastructure development.',
  },
  {
    image: '/src/images/industries/Oil & Gas.jpg',
    title: 'Oil & Gas',
    description:
      'Delivering comprehensive solutions for upstream, midstream, and downstream operations, including specialized equipment and technical expertise for optimal production.',
  },
  {
    image: '/src/images/industries/Chemicals & Petrochemicals.jpg',
    title: 'Chemicals & Petrochemicals',
    description:
      'Supporting chemical processing and petrochemical manufacturing with high-quality equipment, safety solutions, and specialized materials for efficient operations.',
  },
];
---

<section class="wpo-project-section">
  <div class="service-wrap px-32">
    <div class="wpo-section-title text-center">
      <h2 class="!text-[#ff5e14]">Supporting diverse industries</h2>
      <h3>Industries We Serve</h3>
    </div>
  </div>
  <div class="container-fluid">
    <div class="project-slider owl-carousel">
      {industries.map((industry) => <IndustryCard {...industry} />)}
    </div>
  </div>
</section>
