---

<section class="wpo-service-section section-padding">
  <div class="service-wrap">
    <div class="wpo-section-title">
      <h2>What We Offer</h2>
      <h3>Products & Services</h3>
    </div>
    <div class="service-slider owl-carousel">
      {services.map((service) => <ServiceCard {...service} />)}
    </div>
  </div>
</section>
