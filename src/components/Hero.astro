---
import ImageComp from './ImageComp.astro';

const slides = [
  {
    image: '/src/images/slider/slide1.jpg',
    title: 'Engineering Excellence & Innovation',
    text: 'Delivering world-class industrial solutions through cutting-edge technology, expert engineering, and unwavering commitment to quality. Our comprehensive range of products and services drives industry success.',
  },
  {
    image: '/src/images/slider/slide2.jpg',
    title: 'Global Industrial Solutions Provider',
    text: "With decades of expertise and a global network of partners, we provide innovative solutions across diverse industries. From specialized equipment to technical consulting, we're your trusted partner in industrial excellence.",
  },
];
---

<section class="wpo-hero-slider">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      {
        slides.map((slide) => (
          <div class="swiper-slide">
            <div class="slide-wrapper">
              <ImageComp
                imagePath={slide.image}
                altText={slide.title}
                className="slide-bg-image slide-inner"
                loadingType="eager"
                fetchpriority="high"
              />
              <div class="slide-overlay" />
              <div class="container-fluid">
                <div class="slide-content">
                  <div data-swiper-parallax="300" class="slide-title">
                    <h2>{slide.title}</h2>
                  </div>
                  <div data-swiper-parallax="400" class="slide-text">
                    <p>{slide.text}</p>
                  </div>
                  <div class="clearfix" />
                  <div data-swiper-parallax="500" class="slide-btns">
                    <a href="about.html" class="theme-btn">
                      About Us
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- swiper controls -->
    <div class="swiper-pagination"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>
<!-- start of wpo-feature-section -->
<section class="wpo-feature-section">
  <div class="wraper">
    <div class="item">
      <div class="icon">
        <ImageComp imagePath="/src/images/funfact1.svg" className="inline" altText="1" />
      </div>
      <div class="content">
        <!-- <h2><span class="odometer" data-count="500">00</span>+</h2> -->
        <h3>Accountability</h3>
        <span>We take responsibility for delivering as promised, adhering to a strict code of conduct.</span>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <ImageComp imagePath="/src/images/funfact2.svg" className="inline" altText="2" />
      </div>
      <div class="content">
        <!-- <h2><span class="odometer" data-count="300">00</span>+</h2> -->
        <h3>Customer focused</h3>
        <span>Delivering tailored solutions with exceptional customer service & support.</span>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <ImageComp imagePath="/src/images/funfact3.svg" className="inline" altText="3" />
      </div>
      <div class="content">
        <!-- <h2><span class="odometer" data-count="226">00</span>+</h2> -->
        <h3>Global Sourcing</h3>
        <span>Providing access to world-class suppliers and manufacturers.</span>
      </div>
    </div>
    <div class="item">
      <div class="icon">
        <ImageComp imagePath="/src/images/funfact4.svg" className="inline" altText="4" />
      </div>
      <div class="content">
        <!-- <h2><span class="odometer" data-count="25">00</span>+</h2> -->
        <h3>Innovation Led</h3>
        <span>Driving industry forward with cutting-edge technology solutions.</span>
      </div>
    </div>
  </div>
</section>
<style>
  .wpo-hero-slider {
    width: 100%;
    height: 950px;
    display: flex;
    position: relative;
    z-index: 0;
  }

  .slide-inner {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: left;
  }

  .slide-inner:before {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 60%, rgba(0, 0, 0, 0.4) 100%);
    content: '';
    z-index: 1;
  }

  .slide-content {
    position: relative;
    z-index: 2;
    padding-bottom: 85px;
    padding-left: 240px;
    margin-top: 140px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .slide-title h2 {
    font-size: 70px;
    font-weight: 800;
    line-height: 90px;
    margin: 10px 0 15px;
    color: #fff;
    padding-top: 6rem;
    text-transform: capitalize;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }

  .slide-text p {
    font-size: clamp(1rem, 2vw, 1.25rem);
    max-width: 800px;

    /* margin-bottom: 2rem; */
    color: #fff;
    line-height: 1.6;
    opacity: 0.95;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
  }

  .theme-btn {
    display: inline-block;
    padding: 12px 30px;
    background: #ff5733;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    transition: all 0.3s;
  }

  .theme-btn:hover {
    background: #e64a2e;
  }

  @media (max-width: 1199px) {
    .wpo-hero-slider {
      height: 680px;
    }
    .slide-title h2 {
      font-size: 50px;
      padding-top: 4rem;
      line-height: 60px;
    }
  }

  @media (max-width: 991px) {
    .wpo-hero-slider {
      height: 600px;
    }
    .slide-content {
      padding-left: 30px;
    }
    .slide-title h2 {
      font-size: 40px;
      padding-top: 4rem;
      line-height: 55px;
    }
  }

  @media (max-width: 767px) {
    .wpo-hero-slider {
      height: 500px;
    }
    .slide-content {
      padding-left: 10px;
      text-align: center;
    }
    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
  }

  .slide-bg-image {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .slide-overlay {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }
</style>
